<!DOCTYPE html>
<html>
  <head>
    <title>APICurious</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
  
    <% if logged_in? %>
      <%= render partial: 'partials/user_navbar' %>
    <% else %>
      <%= render partial: 'partials/guest_navbar' %>
    <% end %>

    <%= yield %>

  </body>
</html>
